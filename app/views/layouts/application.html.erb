<!DOCTYPE html>
<html>
  <head>
    <title>RailsExercise</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application' %>

    <%= javascript_pack_tag 'hello_react' %>

  </head>

  <body>
    <h1><%= link_to "Home", root_path %></h1>

    <div class="container">

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if current_user %>
      <%= link_to "結帳", new_order_path, :class => "btn btn-primary" %>
      <%= link_to "我的訂單", orders_path, :class => "btn btn-primary" %>


      <%= link_to('登出', destroy_user_session_path, :method => :delete) %> |
      <%= link_to('修改密碼', edit_registration_path(:user)) %>
    <% else %>
      <%= link_to('註冊', new_registration_path(:user)) %> |
      <%= link_to('登入', new_session_path(:user)) %>
    <% end %>

    <%= yield %>

<hr>
    <%= link_to "中文版", :controller => controller_name, :action => action_name, :locale => "zh-TW" %>
    <%= link_to "English", :controller => controller_name, :action => action_name, :locale => "en" %>


    </div>
  </body>
</html>
